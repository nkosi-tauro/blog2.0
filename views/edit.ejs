<div class="container">
    <h2 class="text-center">
      <i class="edit icon" ></i>
      Edit Post<br><br>
      <%= blog.title %>
    </h2>
    <!-- It's optional define any route: OR
    `/blogsupdate/<%= blog._id %>` -->
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" class="form-control" name="blog[title]" placeholder="title" value="<%= blog.title %>">
        </div>    
        <div class="field">
            <label>Image</label>
            <input type="text"  class="form-control" name="blog[image]" placeholder="image url" value="<%= blog.image %>">
        </div>    
        <div class="field"> 
            <label>Blog Content</label>
            <textarea  class="form-control" rows="5" id="summernote" name="blog[body]"><%= blog.body %></textarea>
        </div>
      <button class="btn btn-success">Submit</button>
    </form>
</div>


