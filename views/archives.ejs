<!-- Container (Blog Section) -->
<div id="tour" class="bg-1">
  <div class="container">
     <h3 class="text-center">Archives</h3>
 
<div class="blog-item">
  <% allBlogs.forEach(function(blog){ %>
    <a href="/blogs/<%= blog._id %>">
        <div class="icon">
            <img src="<%= blog.image %>" alt="">
        </div>
        <div class="content">
            <div class="title"><%= blog.title %><span class="blog-date"><%= blog.date.toDateString() %></span></div>
            <div class="rounded"></div>

            <p>
                <%- blog.body.substring(0, 5) %>...
            </p>
        </div>
        <div class="item-arrow">
            <i class="fa fa-long-arrow-right" aria-hidden="true"> </i>
        </div>
    </a>
    <% }) %>
</div>

  </div>
</div>

